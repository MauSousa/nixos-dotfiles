#!/usr/bin/env python3

import re
import json

def update_package_json_scripts(file_path='package.json'):
    """
    Update the composer.json scripts section from the old test format
    to the new comprehensive scripts structure.
    """
    try:
        # Read and parse the JSON file
        with open(file_path, 'r') as file:
            data = json.load(file)
        
        # Check if scripts section exists
        if 'scripts' not in data:
            print("No 'scripts' section found in the file.")
            return False
        
        # Update the scripts section
        data['scripts'] = {
            "build": "vite build",
            "dev": "vite",
            "format": "prettier --write resources/",
            "format:check": "prettier --check resources/"
        }
        
        # Write back to the file with proper formatting
        with open(file_path, 'w') as file:
            json.dump(data, file, indent=4)
        
        print(f"Successfully updated {file_path}")
        return True
        
    except FileNotFoundError:
        print(f"File not found: {file_path}")
        return False
    except json.JSONDecodeError:
        print(f"Invalid JSON in {file_path}")
        return False

# For direct string replacement (if you have the exact string in any file):
def replace_string_in_file(file_path, old_string, new_string):
    """Replace a specific string in a file."""
    try:
        with open(file_path, 'r') as file:
            content = file.read()
        
        if old_string in content:
            updated_content = content.replace(old_string, new_string)
            
            with open(file_path, 'w') as file:
                file.write(updated_content)
            
            print(f"String replaced successfully in {file_path}")
            return True
        else:
            print(f"Old string not found in {file_path}")
            return False
            
    except FileNotFoundError:
        print(f"File not found: {file_path}")
        return False

# Usage examples:
if __name__ == "__main__":
    # Method 1: Parse as JSON (recommended)
    update_package_json_scripts('package.json')
